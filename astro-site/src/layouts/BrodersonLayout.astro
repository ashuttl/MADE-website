---
import DefaultLayout from './DefaultLayout.astro';
const { title, description, entryTitle, category, images } = Astro.props;
---
<DefaultLayout title={title} description={description}>
  <article class="broderson-entry">
      <header>
          <h1>{entryTitle}</h1>
          {category && <p class="category">{category}</p>}
      </header>
      <div class="content">
          <slot /> {/* For the main markdown content */}
      </div>
      {images && images.length > 0 && (
          <div class="gallery">
              {images.map(image => (
                  <figure>
                      <img src={image.src} alt={image.alt} />
                      {image.caption && <figcaption>{image.caption}</figcaption>}
                  </figure>
              ))}
          </div>
      )}
  </article>
</DefaultLayout>
